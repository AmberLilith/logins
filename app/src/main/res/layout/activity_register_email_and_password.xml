<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="16dp"
    tools:context=".AuthenticationActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/registerEmailPasswordToolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#5E5C5C"
        android:minHeight="?attr/actionBarSize"
        android:textAlignment="center"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/gray"
        android:orientation="vertical"
        android:layout_marginTop="16dp"
        android:padding="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/registerEmailPasswordToolbar">

        <TextView
            android:id="@+id/registerEmailPasswordTextViewEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/textViewRegisterEmailText" />

        <EditText
            android:id="@+id/registerEmailPasswordEditTextEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textEmailAddress"
            android:text="teste@gmail.com"
            android:hint="@string/editTxtRegisterEmailHint"
            android:autofillHints="emailAddress" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/registerEmailPasswordTextViewUserName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/registerEmailPasswordTextViewUserNameText" />

            <EditText
                android:id="@+id/registerEmailPasswordTextTextUserName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:text="Teste"
                android:inputType="text"
                android:hint="@string/registerEmailPasswordTextTextUserNameHint" />

            <TextView
                android:id="@+id/createOrEditLoginTextViewPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/createOrEditLoginTextViewPassworText" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="0dp"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/createOrEditLoginEditTextPassword"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:text="teste123"
                    android:hint="@string/createOrEditLoginEditTextPasswordHint"
                    android:inputType="textPassword"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/createOrEditLoginEditTextUser" />

                <TextView
                    android:id="@+id/createOrEditLoginButtonGeneratePassword"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/registerEmailPasswordTextViewRepeatPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/createOrEditLoginTextViewRepeatPasswordText" />

        <EditText
            android:id="@+id/createOrEditLoginEditTextRepeatPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:autofillHints="password"
            android:ems="10"
            android:text="teste123"
            android:hint="@string/createOrEditLoginEditTextRepeatPasswordHnt"
            android:inputType="textPassword"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/registerEmailPasswordEditTextEmail" />

        <Button
            android:id="@+id/registerEmailPasswordButtonRegister"
            style="@style/Widget.AppCompat.Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/buttonRegisterText" />

    </LinearLayout>

    <TextView
        android:id="@+id/registerEmailPasswordTextViewTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/textviewRegisterTitle"
        android:textColor="#FDFCFC"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/registerEmailPasswordToolbar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/registerEmailPasswordToolbar"
        app:layout_constraintTop_toTopOf="@+id/registerEmailPasswordToolbar" />

</androidx.constraintlayout.widget.ConstraintLayout>