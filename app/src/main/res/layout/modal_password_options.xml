<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="12dp"
    android:background="@drawable/background_rounded"
    android:backgroundTint="#D6D3D3"
    android:padding="8dp">

    <RadioGroup
        android:id="@+id/modal_password_optionsRadioGroupPasswordFormats"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/modal_password_optionsTextViewPasswordFormats">

        <RadioButton
            android:id="@+id/modal_password_optionsRadioButtonAlphaNumOnly"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/modal_password_optionsRadioButtonAlphaNumOnlyText" />

        <RadioButton
            android:id="@+id/modal_password_optionsRadioButtonAlphaNumSpecialCharactersUpAndLowCase"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/modal_password_optionsRadioButtonAlphaNumSpecialCharactersUpAndLowCaseText" />

        <RadioButton
            android:id="@+id/modal_password_optionsRadioButtonOnlyNumbers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/modal_password_optionsRadioButtonOnlyNumbersText" />

        <RadioButton
            android:id="@+id/modal_password_optionsRadioButtonOnlyLetters"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/modal_password_optionsRadioButtonOnlyLettersText" />
    </RadioGroup>

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/modal_password_optionsToolbar"
        android:layout_width="367dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/modal_password_optionsTextViewTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/modal_password_optionsTextViewTitleText"
        android:textColor="#FBFAFA"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/modal_password_optionsRadioGroupPasswordFormats"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.476"
        app:layout_constraintStart_toStartOf="@+id/modal_password_optionsToolbar"
        app:layout_constraintTop_toTopOf="@+id/modal_password_optionsToolbar"
        app:layout_constraintVertical_bias="0.238" />

    <LinearLayout
        android:id="@+id/modal_password_optionsLinearLayoutPasswordLength"
        android:layout_width="367dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/modal_password_optionsTextViewPasswordLength">

        <TextView
            android:id="@+id/modal_password_optionsTextViewMinLength"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_marginBottom="16dp"
            android:text="@string/modal_password_optionsTextViewMinLengthText" />

        <Spinner
            android:id="@+id/modal_password_optionsSpinnerMinLength"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_marginBottom="16dp"
            android:entries="@array/list1to20" />

        <TextView
            android:id="@+id/modal_password_optionsTextViewMaxLength"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="@string/modal_password_optionsTextViewMaxLengthText" />

        <Spinner
            android:id="@+id/modal_password_optionsSpinnerMaxLength"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:entries="@array/list1to20"
            android:layout_marginBottom="16dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/modal_password_optionsLinearLayoutPasswordLength"
        >

        <Button
            android:id="@+id/modal_password_optionsButtonCancel"
            style="@style/Widget.AppCompat.Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/modal_password_optionsButtonCancelText" />

        <Button
            android:id="@+id/modal_password_optionsButtonGeneratePassword"
            style="@style/Widget.AppCompat.Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/modal_password_optionsButtonGeneratePasswordText" />
    </LinearLayout>

    <TextView
        android:id="@+id/modal_password_optionsTextViewPasswordFormats"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginTop="16dp"
        android:text="@string/modal_password_optionsTextViewPasswordFormatsText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/modal_password_optionsToolbar"
        tools:layout_editor_absoluteY="71dp" />

    <TextView
        android:id="@+id/modal_password_optionsTextViewPasswordLength"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:visibility="gone"
        android:text="@string/modal_password_optionsTextViewPasswordLengthText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/modal_password_optionsRadioGroupPasswordFormats" />
</androidx.constraintlayout.widget.ConstraintLayout>